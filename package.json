{
  "name": "@weisyn/client-sdk-js",
  "version": "0.1.0-alpha",
  "description": "WES 区块链客户端开发工具包 - JavaScript/TypeScript 版本",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c --watch",
    "build:types": "tsc --emitDeclarationOnly",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "prepublishOnly": "npm run build && npm run build:types"
  },
  "keywords": [
    "wes",
    "blockchain",
    "sdk",
    "client",
    "typescript"
  ],
  "author": "WES Team",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/weisyn/client-sdk-js.git"
  },
  "bugs": {
    "url": "https://github.com/weisyn/client-sdk-js/issues"
  },
  "homepage": "https://github.com/weisyn/client-sdk-js#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "ws": "^8.14.0",
    "@noble/secp256k1": "^2.0.0",
    "js-sha3": "^0.8.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "rollup": "^4.5.0",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  }
}

